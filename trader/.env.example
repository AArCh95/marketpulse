# Trading Server Configuration
# Port must match runtime: 8600 (per your command)

# Database
TRADER_DB=D:\AARCH\DBs\trader.duckdb
TRADER_SNAPSHOT_DIR=D:\AARCH\DBs\snapshots
TRADER_SNAPSHOT_POINTER=D:\AARCH\DBs\CURRENT_SNAPSHOT_TRADER.txt
SIGNALS_DB=D:\AARCH\DBs\signals.duckdb

# Authentication
TRADER_WEBHOOK_TOKEN=your-secure-webhook-token-here

# Alpaca API (PAPER MODE)
APCA_API_KEY_ID=your-new-alpaca-key-id
APCA_API_SECRET_KEY=your-new-alpaca-secret-key
ALPACA_PAPER=true

# Snapshot Management
TRADER_SNAPSHOT_KEEP=12
TRADER_SNAPSHOT_INTERVAL_SEC=90
TRADER_SNAPSHOT_ON_INGEST=true

# Risk Management
TP_PCT=0.03
SL_PCT=0.02
ALLOW_SHORTS=false
EXIT_ON_SHORT=true

# Budget & Pacing
DAILY_SPEND_CAP=0.10
DAILY_SPEND_TZ=America/New_York
MAX_NAMES_PER_BATCH=25
ORDER_THROTTLE_MS=150

# Cooldowns
PER_SYMBOL_COOLDOWN_MIN=5
STALE_SEC_MAX=21600
SELL_BAN_MIN=15

# Position Sizing
MAX_WEIGHT_PCT=0.004
MIN_DELTA_WEIGHT=0.00005
MIN_NOTIONAL=1.00
PCT_PER_TRADE=0.00005
USD_PER_TRADE=0
